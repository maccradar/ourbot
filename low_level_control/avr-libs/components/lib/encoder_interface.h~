#ifndef ENCODER_INTERFACE_H
#define ENCODER_INTERFACE_H

class EncoderInterface :
{
private:
	int32_t position;

public:
	EncoderInterface() :
		position(0;)
	{
		//do nothing
	}

	virtual inline int32_t read() {
		return position;
	}
	
	virtual inline void write(int32_t p) {
		position = p;
	}
};

#endif //
